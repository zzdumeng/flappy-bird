*
  box-sizing: border-box

html, body
  margin 0
  padding 0
body
  display:  flex
  align-items: center
  justify-content:  center

.game
  position: absolute

.sprite
  display: block
  position: absolute

.bg
  position absolute
  top 0
  left 0

.logo
  position absolute
  top 100px
  left 50%
  transform translateX(-50%)
  animation: upAndDown 1s linear infinite

@keyframes upAndDown 
  from 
    top: 100px
  50% 
    top: 80px
  to 
    top: 120px
